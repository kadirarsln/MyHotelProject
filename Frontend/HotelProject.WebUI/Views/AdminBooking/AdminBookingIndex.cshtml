@model List<ResultBookingDto>
@{
    ViewData["Title"] = "AdminBookingIndex";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Misafir</th>
                <th>Giriş Tarihi</th>
                <th>Çıkış Tarihi</th>
                <th>Durum</th>
                <th>Onayla</th>
                <th>İptal Et</th>
                <th>Beklet</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@(((DateTime)item.Checkin).ToString("dd-MMM-yyyy"))</td>
                    <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                    <td>
                        <span class="badge badge-primary px-2">@item.Status</span>
                    </td>
                    <td><a href="/AdminBooking/ApprovedReservation2/@item.BookingID" class="btn btn-success">Onayla</a></td>
                    <td><a href="/AdminBooking/CancelReservation/@item.BookingID" class="btn btn-danger">İptal Et</a></td>
                    <td><a href="/AdminBooking/WaitReservation/@item.BookingID" class="btn btn-warning">Beklet</a></td>
                    <td><a href="/AdminBooking/UpdateBooking/@item.BookingID" class="btn btn-info">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
